{% extends 'templates/layout.twig' %}
{% block content %}
    <div class="col-lg-12">
        <p class="h4 mb-4">Ajouter un nouveau contact :</p>
    </div>
    <div class="col-lg-6">
        <form method="post" action="index.php?p=contact.add">
            <div class="form-group">
                <label for="exampleFormControlInput1">Nom</label>
                <input value="{{ contact.name }}" type="text" name="name" class="form-control" id="" placeholder="Nom">
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Prénom</label>
                <input value="{{ contact.first_name }}" type="text" name="first_name" class="form-control" id=""
                       placeholder="Prénom">
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Email address</label>
                <input value="{{ contact.email }}" type="email" name="email" class="form-control" id=""
                       placeholder="name@example.com">
                <div class="has-error email-error" style="color: red">

                </div>
                <div class="has-error email-valide" style="color: green">

                </div>
            </div>
            <button class="btn btn-primary js-check-email">Vérifier l'addresse Email</button>
            <button type="submit" class="btn btn-primary">Ajouter</button>
        </form>
    </div>

{% endblock %}